<?xml version="1.0" ?>
<webapp>
	<application>
		<title>Facebook</title>
		<icon>facebook.png</icon>
		<url>http://www.facebook.com</url>
		<windowgeometry>
			<left>50</left>
			<top>50</top>
			<width>815</width>
			<height>700</height>
		</windowgeometry>
	</application>
	<rules>
		<httpdefault>internal</httpdefault>
		<http>
			<advert>http://ads.ak.facebook.com/ads</advert>
		</http>
	</rules>
	<interface>
		<menubar>
			<item label="My _Home" group="_Application" shortcut="ctrl+h">http://www.facebook.com/home.php</item>
			<item label="My _Profile" group="_Application" shortcut="ctrl+p">http://www.facebook.com/profile.php</item>
			<separator group="_Application"/>
			<item label="Go _Back a Page" group="_Application" shortcut="ctrl+b">javascript:history.back()</item> 
			<item label="_Quit" group="_Application" shortcut="ctrl+q">medes://earlydays/action/quit</item>
			<item label="My _Friends" group="_Friends" shortcut="ctrl+shift+f">http://www.facebook.com/friends.php?r</item>
			<item label="Currently _Online" group="_Friends" shortcut="ctrl+shift+o">http://www.facebook.com/friends.php?online</item>
			<item label="_Search for Friends" group="_Friends">https://register.facebook.com/findfriends.php?tabs</item>
			<item label="Social _Timeline" group="_Friends">http://www.facebook.com/timeline.php</item>
			<separator group="_Friends"/>
			<item label="My _Groups" group="_Friends" shortcut="ctrl+shift+g">http://www.facebook.com/groups.php?ref=pb</item>
			<item label="_Browse Groups" group="_Friends">http://www.facebook.com/s.php?k=200000010&amp;c1=4</item>
			<item label="_Write a Message" group="_Messages" shortcut="ctrl+shift+w">http://www.facebook.com/inbox/?compose</item>
			<separator group="_Messages"/>
			<item label="_Inbox" group="_Messages" shortcut="ctrl+shift+i">http://www.facebook.com/inbox/</item>
			<item label="_Outbox" group="_Messages">http://www.facebook.com/inbox/?f=1</item>
			<item label="_Topics" group="_Help">http://www.facebook.com/help.php</item>
			<separator group="_Help"/>
			<item label="_Privacy Info" group="_Help">http://www.facebook.com/help.php?page=9</item>
			<item label="_Suggestions Form" group="_Help">http://www.facebook.com/help.php?tab=suggest</item>
			<separator group="_Help"/>
			<item label="_About Facebook" group="_Help">http://www.facebook.com/about.php</item>
		</menubar>
	</interface>
</webapp>
