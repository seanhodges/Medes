<?xml version="1.0" ?>
<webapp>
	<application>
		<title>Google Mail</title>
		<icon>gmail.png</icon>
		<url>http://mail.google.com</url>
	</application>
	<rules>
		<http>
			<internal>http://mail.google</internal>
			<internal>https://mail.google</internal>
			<internal>https://www.google.com/accounts</internal>
			<internal>http://www.google.com/accounts</internal>
			<internal>https://www.google.co.uk/accounts</internal>
			<internal>http://www.google.co.uk/accounts</internal>
			<internal>http://www.google.co.uk/intl/en_uk/help</internal>
			<internal>http://www.google.co.uk/help/mail</internal>
			<internal>http://gmodules</internal>
			<internal>about:blank</internal>
			<external>http://www.google</external>
			<external>http://images.google</external>
			<external>http://maps.google</external>
			<external>http://news.google</external>
			<external>http://groups.google</external>
			<external>http://scholar.google</external>
		</http>
	</rules>
	<interface>
		<menubarenabled>true</menubarenabled>
		<menubar>
			<item label="_Compose Message" group="_Application" shortcut="ctrl+shift+m">http://mail.google.com/mail/#compose</item> 
			<separator group="_Application"/>
			<item label="Go _Back a Page" group="_Application" shortcut="ctrl+b">javascript:history.back()</item> 
			<separator group="_Application"/>
			<item label="_Quit" group="_Application" shortcut="ctrl+q">medes://earlydays/action/quit</item>
			<item label="_Inbox" group="_Mail" shortcut="ctrl+shift+i">http://mail.google.com/mail/#inbox</item>
			<item label="_Sent Mail" group="_Mail" shortcut="ctrl+shift+s">http://mail.google.com/mail/#sent</item>
			<item label="_Drafts" group="_Mail" shortcut="ctrl+shift+d">http://mail.google.com/mail/#drafts</item>
			<separator group="_Mail"/>
			<item label="S_tarred Mail" group="_Mail">http://mail.google.com/mail/#starred</item>
			<separator group="_Mail"/>
			<item label="S_pam" group="_Mail">http://mail.google.com/mail/#spam</item>
			<item label="_Trash" group="_Mail">http://mail.google.com/mail/#trash</item>
			<item label="_Contacts" group="_Tools" shortcut="ctrl+shift+c">http://mail.google.com/mail/#contacts</item>
			<separator group="_Tools"/>
			<item label="_Chats" group="_Tools">http://mail.google.com/mail/#chats</item>
			<item label="_General" group="_Settings">http://mail.google.com/mail/#settings</item>
			<item label="_Accounts" group="_Settings">http://mail.google.com/mail/#settings/accounts</item>
			<separator group="_Settings"/>
			<item label="_Labels" group="_Settings">http://mail.google.com/mail/#settings/labels</item>
			<item label="_Filters" group="_Settings">http://mail.google.com/mail/#settings/filters</item>
			<item label="_Mail Forwarding" group="_Settings">http://mail.google.com/mail/#settings/fwdandpop</item>
			<separator group="_Settings"/>
			<item label="_Chat" group="_Settings">http://mail.google.com/mail/#settings/chat</item>
			<item label="_Web Clips" group="_Settings">http://mail.google.com/mail/#settings/webclips</item>
			<item label="Mail _Help" group="_Help">http://mail.google.com/support/?ctx=gmail&amp;hl=en</item>
			<separator group="_Help"/>
			<item label="_Take a Tour" group="_Help">http://www.google.com/mail/help/tour/start.html</item>
			<separator group="_Help"/>
			<item label="_About Google Mail" group="_Help">http://mail.google.com/mail/help/about.html</item>
		</menubar>
	</interface>
</webapp>
