<?xml version="1.0" ?>
<webapp>
	<application>
		<title>Welcome to Medes!</title>
		<url>${LOCAL_RESOURCE}/medes_home.html</url>
		<windowgeometry>
			<left>0</left>
			<top>0</top>
			<width>800</width>
			<height>600</height>
		</windowgeometry>
	</application>
	<rules>
		<remotedefault>external</remotedefault>
		<localdefault>drop</localdefault>
		<javascriptdefault>allow</javascriptdefault>
		<remote>
			<internal>jar:file:///usr/lib/firefox/chrome/toolkit.jar!/content/global/netError.xhtml</internal>
		</remote>
		<local>
			<internal>file://${LOCAL_RESOURCE}/medes_home.html</internal>
		</local>
	</rules>
	<interface>
		<menubarenabled>false</menubarenabled>
		<statusbarenabled>true</statusbarenabled>
	</interface>
</webapp>
